<%- include('header.ejs'); %>
    <%- include('sidebar.ejs'); %>

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h3>Kids</h3>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>

                <div class="row">

                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Kids <small> Add kids to system</small></h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                            aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">Settings 1</a>
                                            </li>
                                            <li><a href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <form method="post" action="/kids/add" enctype="multipart/form-data">
                                <div id="wizard_verticle" class="form_wizard wizard_verticle">
                                    <ul class="list-unstyled wizard_steps">
                                        <li>
                                            <a href="#step-11">
                                                <span class="step_no">1</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#step-22">
                                                <span class="step_no">2</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#step-33">
                                                <span class="step_no">3</span>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="#step-44">
                                                <span class="step_no">4</span>
                                            </a>
                                        </li>
                                    </ul>
                                    
                                    <div id="step-11">
                                        <h2 class="StepTitle">Step 1 </h2>
                                        <div class="form-horizontal form-label-left">

                                            <span class="section">Kid Personal Info</span>

                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="first-name">First
                                                    Name <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="text" id="first-name2" name="firstName" required="required"
                                                        class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="last-name">Father Name
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="text" id="last-name2" name="fatherName"
                                                        required="required" class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="middle-name" class="control-label col-md-3 col-sm-3">Last Name</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="middle-name2" class="form-control col-md-7 col-xs-12"
                                                        type="text" name="lastName">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="middle-name22" class="control-label col-md-3 col-sm-3">Baptism Name</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="middle-name22" class="form-control col-md-7 col-xs-12"
                                                        type="text" name="baptismName">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3">Gender</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <div id="gender2" class="btn-group" data-toggle="buttons">
                                                        <label class="btn btn-default" data-toggle-class="btn-primary"
                                                            data-toggle-passive-class="btn-default">
                                                            <input type="radio" name="gender" value="Male"> &nbsp; Male
                                                            &nbsp;
                                                        </label>
                                                        <label class="btn btn-primary" data-toggle-class="btn-primary"
                                                            data-toggle-passive-class="btn-default">
                                                            <input type="radio" name="gender" value="Female" checked="">
                                                            Female
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3">Birth Date <span
                                                        class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="birthday2"
                                                        class="date-picker form-control col-md-7 col-xs-12"
                                                        required="required" type="date" name="birthDate">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3">Address</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <textarea class="form-control" name="address"></textarea>
                                                </div>

                                            </div>
                                            
                                            </div>
                                    </div>
                                    <div id="step-22">
                                        <h2 class="StepTitle">Step 2 Content</h2>
                                        <div class="form-horizontal form-label-left">
                                        
                                            <span class="section">Guardian Information</span>
                                        
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="first-name">Full
                                                    Name <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="text" id="first-name2" name="guardianFullName" required="required"
                                                        class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="last-name">Phone Number
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="text" id="last-name2" name="guardianPhoneNumber" required="required"
                                                        class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="middle-name" class="control-label col-md-3 col-sm-3">Guardian Relationship</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <select class="form-control" name="guardianRelationship">
                                                        <option value="Father">Father</option>
                                                        <option value="Mother">Mother</option>
                                                        <option value="Brother">Brother</option>
                                                        <option value="Sister">Sister</option>
                                                        <option value="Other">Other</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label for="middle-name22" class="control-label col-md-3 col-sm-3">Guardian Occupation</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input id="middle-name22" class="form-control col-md-7 col-xs-12" type="text" name="guardianOccupation">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3">Guardian Address</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <textarea class="form-control" name="guardianAddress"></textarea>
                                                </div>
                                        
                                            </div>
                                        </div>
                                        </div>
                                    <div id="step-33">
                                        <h2 class="StepTitle">Step 3 Content</h2>
                                        <div class="form-horizontal form-label-left">
                                        
                                            <span class="section"> Kid School Detail</span>
                                        
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="first-name">Business Year <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <select class="form-control" name="businessYear">
                                                        <% for(var i=2010;i<=2025;i++){ %>
                                        
                                        
                                                            <option value="<%= i %>">
                                                                <%= i %>
                                                            </option>
                                                            <% } %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="last-name">School Name
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="text" id="last-name2" name="schoolName" required="required"
                                                        class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                    <label class="control-label col-md-3 col-sm-3" for="last-name">Grade
                                                        <span class="required">*</span>
                                                    </label>
                                                    <div class="col-md-6 col-sm-6">
                                                        <select class="form-control col-md-7 col-xs-12" name="grade" id="grade">
                                                            <% for(var i = 1;i<=12;i++){%>
                                                                <option><%= i%></option>
                                                                <%}%>
                                                        </select>
                                                    </div>
                                                </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3">School Address</label>
                                                <div class="col-md-6 col-sm-6">
                                                    <textarea class="form-control" name="schoolAddress"></textarea>
                                                </div>
                                        
                                            </div>
                                        </div>
                                    </div>
                                    <div id="step-44">
                                        <h2 class="StepTitle">Step 4 Content</h2>
                                        <div class="form-horizontal form-label-left">
                                        
                                            <span class="section"> Kid and Guardian Photo</span>
                                        
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="first-name">Kid Photo <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="file" id="kidPhoto" name="photo" required="required" class="form-control col-md-7 col-xs-12" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="control-label col-md-3 col-sm-3" for="last-name">Guardian Photo
                                                    <span class="required">*</span>
                                                </label>
                                                <div class="col-md-6 col-sm-6">
                                                    <input type="file" id="guardianPhoto" name="guardianPhoto" class="form-control col-md-7 col-xs-12">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                                <!-- End SmartWizard Content -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <%- include('footer.ejs'); %>