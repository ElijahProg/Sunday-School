<%- include('header.ejs'); %>
    <%- include('sidebar.ejs'); %>

        <!-- page content -->
        <div class="right_col" role="main">
            <div class="">
                <div class="page-title">
                    <div class="title_left">
                        <h1><i class="fa fa-users"></i> Kids <small>Sunday school kids list</small></h1>
                    </div>

                    <div class="title_right">
                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search for...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">Go!</button>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_title">
                                <h2>Kids <a href="/kids/add" class="btn btn-primary"><i class="fa fa-plus"></i> <i class="fa fa-user"></i> Add
                                        Kid</a>
                                </h2>
                                <ul class="nav navbar-right panel_toolbox">
                                    <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                            aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                        <ul class="dropdown-menu" role="menu">
                                            <li><a href="#">Settings 1</a>
                                            </li>
                                            <li><a href="#">Settings 2</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li><a class="close-link"><i class="fa fa-close"></i></a>
                                    </li>
                                </ul>
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">
                                <table id="datatable" class="table table-striped table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Full Name</th>
                                            <th>Baptism Name</th>
                                            <th>Birth Date</th>
                                            <th>Registration Date</th>
                                            <th>Gender</th>
                                            <th>Grade</th>
                                            <th>Created AT</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if(kids){ %>
                                            <% for(var i=0;i < kids.length;i++){%>
                                                <tr>
                                                    <td>
                                                        <%= i+1 %>
                                                    </td>
                                                    <td>
                                                        <a href="/kids/detail?id=<%= kids[i]._id %> "><%= kids[i].firstName %>
                                                            <%= kids[i].fatherName %>
                                                                <%= kids[i].lastName %></a>
                                                        
                                                    </td>
                                                    <td>
                                                        <%= kids[i].baptismName %>
                                                    </td>
                                                    <td>
                                                        <%= kids[i].birthDate %>
                                                    </td>
                                                    <td>
                                                        <%= kids[i].registrationDate %>
                                                    </td>
                                                    <td>
                                                        <%= kids[i].gender %>
                                                    </td>
                                                    <td>
                                                        <%= kids[i].currentGrade %>
                                                            </td>
                                                            <td>
                                                                <%= kids[i].createdAt %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group">
                                                            <button data-toggle="dropdown"
                                                                class="btn btn-primary dropdown-toggle btn-sm"
                                                                type="button" aria-expanded="false"><i
                                                                    class="fa fa-list"></i> <span class="caret"></span>
                                                            </button>
                                                            <ul role="menu" class="dropdown-menu">
                                                                <li><a href="#"><i class="fa fa-edit"></i>Edit</a>
                                                                </li>
                                                                <li><a href="#"><i class="fa fa-trash"></i>Remove</a>
                                                                </li>
                                                                <li><a href="/kids/detail?id=<%= kids[i]._id %>"><i class="fa fa-list"></i>Detail</a>
                                                                </li>
                                                                <li class="divider"></li>
                                                                <li><a
                                                                        href="#"><i
                                                                            class="fa fa-th"></i>Subject
                                                                        Detail</a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <%}}%>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /page content -->
        <%- include('footer.ejs'); %>